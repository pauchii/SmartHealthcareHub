<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th><%= sortColumn "forename" %></th>
      <th><%= sortColumn "surname" %></th>
      <th>Date of Birth</th>
      <th>Address</th>
      <th>Phone Number</th>
      <th>Infection or Injury</th>
      <th>Symptoms</th>
      <th>Other Observations</th>
      <th>Added By:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.forename %></td>
        <td><%= patient.surname %></td>
        <td><%= patient.date_of_birth %></td>
        <td><%= patient.address %></td>
        <td><%= patient.phone_number %></td>
        <td><%= patient.infection_or_injury %></td>
        <td><%= patient.symptoms %></td>
        <td><%= patient.other_observations %></td>
        <td><%= patient.user.email %></td>
        <td><%= link_to 'Show', patient %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Continue to Delete Patient?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @patients %>
